<link rel="stylesheet" href="public/styles.css"
<h1 id="new-show-header">Add a New Show</h1>

<% if @error_messages %>
  <p style="color: red;"><%= @error_messages.join('<br>') %></p>
<% end %>

<form id="new-show-section" action="/new_show" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" required minlength="3"><br>

  <label for="network">Network:</label>
  <input type="text" name="network" required minlength="3"><br>

  <label for="release_date">Release Date:</label>
  <input type="date" name="release_date" required><br>

  <label for="description">Description:</label>
  <textarea name="description" required minlength="3"></textarea><br>

  <input type="submit" value="Add">
</form>

<a href="/dashboard">TV Shows</a>

<form id="new-show-footer" action="/logout" method="post">
  <input type="submit" value="Logout">
</form>
